<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="C:\Users\brianr\Dropbox\Code\Deployments\log\nlog-internal.log"
      internalLogLevel="Info" >


  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File" name="App.LogFile" fileName="C:\Users\brianr\Dropbox\Code\Deployments\log\quasar.log"
            layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
    <!-- write to console -->
    <target xsi:type="Console" name="Console"
            layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
    <!-- write to individual files per deployment -->
    <target xsi:type="File" name="Deploy.LogFile" fileName="${mdc:Deploy.LogPath}"
            layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="App.LogFile,Console" />
    <logger name="Quasar.Core.DeploymentRunner" minlevel="Trace" writeTo="Deploy.LogFile" />

  </rules>
</nlog>